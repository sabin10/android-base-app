<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/edit_corner_radius"/>
            <padding
                android:left="@dimen/default_padding_half"
                android:right="@dimen/default_padding_half"
                android:top="@dimen/default_padding_half"
                android:bottom="@dimen/default_padding_half"
            />
            <stroke android:color="@color/LightGray"
                    android:width="@dimen/edit_border_width"/>
            <solid android:color="@color/White"/>
        </shape>
    </item>
</layer-list>