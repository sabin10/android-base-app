<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textInputEditText">
        <item name="android:background">@drawable/auth_input_style</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/LightGray</item>
        <item name="android:textSize">@dimen/material_text_title</item>
    </style>

    <!--BUTTONS-->
    <style name="btn_green_style">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:background">@drawable/round_green_btn</item>

    </style>

    <style name="progressWhite">
        <item name="android:colorPrimary">@android:color/white</item>
    </style>

</resources>
